<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fondo"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fondo"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageVaca1"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/vaca"
                android:tag="@drawable/vaca"

                />
            <ImageView
                android:id="@+id/imageVaca2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/vaca"
                android:tag="@drawable/vaca"

                />
            <ImageView
                android:id="@+id/imagePerro1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/perro"
                android:tag="@drawable/perro"

                />
            <ImageView
                android:id="@+id/imagePerro2"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/perro"
                android:tag="@drawable/perro"

                />
            <ImageView
                android:id="@+id/imageGallina1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/gallina"
                android:tag="@drawable/gallina"

                />
            <ImageView
                android:id="@+id/imageGallina2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/gallina"
                android:tag="@drawable/gallina"

                />
            <ImageView
                android:id="@+id/imageCaballo1"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/caballo"
                android:tag="@drawable/caballo"

                />
            <ImageView
                android:id="@+id/imageCaballo2"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:src="@drawable/caballo"
                android:tag="@drawable/caballo"

                />
            <ImageView
                android:id="@+id/imageCerdo1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cerdo"
                android:tag="@drawable/cerdo"

                />
            <ImageView
                android:id="@+id/imageCerdo2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cerdo"
                android:tag="@drawable/cerdo"

                />
            <ImageView
                android:id="@+id/imageConejo1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/conejo"
                android:tag="@drawable/conejo"

                />
            <ImageView
                android:id="@+id/imageConejo2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/conejo"
                android:tag="@drawable/conejo"

                />
            <ImageView
                android:id="@+id/imageOveja1"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/oveja"
                android:tag="@drawable/oveja"

                />
            <ImageView
                android:id="@+id/imageOveja2"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/oveja"
                android:tag="@drawable/oveja"

                />
            <ImageView
                android:id="@+id/imagePato1"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/pato"
                android:tag="@drawable/pato"

                />
            <ImageView
                android:id="@+id/imagePato2"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:src="@drawable/pato"
                android:tag="@drawable/pato"
                />
        </FrameLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        app:backgroundTint="@null"
        android:background="@drawable/animal_frame_design"
        >
    </ImageView>
    <ImageView
        android:id="@+id/searchImage"
        android:src="@drawable/vaca"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="45dp"
        >
    </ImageView>

</FrameLayout>



